        div(class="c-loop__container--upper")        
          
          +circle(6,60)
          +circle(5,70)
          +circle(4,65)
          +circle(3,80)
          +circle(2,75)
          +circle(1,20)
        
        //- values
        div(class="c-loop__container--values" data-activate="ready")
          - var i = 0;
          while i < 100
            +circle-value(i)
            - var i = i+10;
            
